{
    "id": "nodebb-plugin-autoresolve",
    "name": "Auto Resolve",
    "description": "Automatically marks topics as 'unresolved' and allows users to toggle them as 'solved' when needed.",
    "url": "https://github.com/yourusername/nodebb-plugin-autoresolve",
    "library": "./library.js",
    "hooks": [
      { "hook": "action:topic.save", "method": "actionTopicSave" },
      { "hook": "filter:topic.thread_tools", "method": "addThreadTool" },
      { "hook": "action:post.save", "method": "onPostSave" },
      { "hook": "action:topic.purge", "method": "actionTopicPurge" }
    ]
  }
  